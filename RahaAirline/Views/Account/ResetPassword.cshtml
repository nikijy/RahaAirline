@model IdentitySample.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "بازیابی کلمه عبور";
    Layout = "~/Views/Shared/_LayoutRegLog.cshtml";
}

<div class="wrap-login100">
    @*<form class="login100-form validate-form">*@
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <span class="login100-form-logo">
            <i class="zmdi zmdi-landscape"></i>
        </span>

        <span class="login100-form-title p-b-34 p-t-27">
            بازیابی کلمه عبور
        </span>
        @Html.ValidationSummary("", new { @class = "text-black" })
        <div class="wrap-input100 validate-input" data-validate="ایمیل را وارد کنید">
            <input class="input100" type="text" name="Email" placeholder="*ایمیل">
            <span class="focus-input100" data-placeholder="&#xf207;"></span>
        </div>

        <div class="wrap-input100 validate-input" data-validate="کلمه عبور را وارد کنید">
            <input class="input100" type="password" name="Password" placeholder="*کلمه عبور">
            <span class="focus-input100" data-placeholder="&#xf191;"></span>
        </div>

        <div class="wrap-input100 validate-input" data-validate="لطفا تکرار کلمه عبور را وارد کنید">
            <input class="input100" type="password" name="ConfirmPassword" placeholder="*تکرار کلمه عبور">
            <span class="focus-input100" data-placeholder="&#xf191;"></span>
        </div>

        <div class="container-login100-form-btn">

            <input type="submit" class="login100-form-btn" value="بازیابی" />

        </div>
       
            @*</form>*@
    }
</div>








