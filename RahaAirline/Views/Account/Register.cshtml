@model IdentitySample.Models.RegisterViewModel
@{
    ViewBag.Title = "ثبت نام";
    Layout = "~/Views/Shared/_LayoutRegLog.cshtml";
}
<script src="https://www.google.com/recaptcha/api.js"></script>



<div class="wrap-login100">
    @*<form class="login100-form validate-form">*@
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <span class="login100-form-logo">
            <i class="zmdi zmdi-landscape"></i>
        </span>

        <span class="login100-form-title p-b-34 p-t-27">
            ثبت نام
        </span>
        @Html.ValidationSummary("", new { @class = "text-black" })
        <div class="wrap-input100 validate-input" data-validate="ایمیل را وارد کنید">
            <input class="input100" type="text" name="Email" placeholder="*ایمیل">
            <span class="focus-input100" data-placeholder="&#xf207;"></span>
        </div>

        <div class="wrap-input100 validate-input" data-validate="کلمه عبور را وارد کنید">
            <input class="input100" type="password" name="Password" placeholder="*کلمه عبور">
            <span class="focus-input100" data-placeholder="&#xf191;"></span>
        </div>

            <div class="wrap-input100 validate-input" data-validate="لطفا تکرار کلمه عبور را وارد کنید">
                <input class="input100" type="password" name="ConfirmPassword" placeholder="*تکرار کلمه عبور">
                <span class="focus-input100" data-placeholder="&#xf191;"></span>
            </div>


            <div class="form-group">
                <div class="col-md-10">
                    <div class="g-recaptcha" data-sitekey="6Lf-_fsUAAAAAFfOaHZInK0sn1RgAWcfs4l4YlP4"></div>
                    <span class="text-danger">@ViewBag.Message</span>
                </div>
            </div>

            <div class="container-login100-form-btn">

                <input type="submit" class="login100-form-btn" value="ثبت نام" />

            </div>
            <center>
                <a class="txt1" href="/Account/Login" name="Login">
                    ورود
                </a>
            </center>
            @*<div class="text-center p-t-90">
                    <a class="txt1" href="/Account/Login" name="Login">
                        ورود
                    </a>
                </div>*@
            @*</form>*@
    }
</div>





