@using RahaAirline
@model IEnumerable<DataLayer.Page>
@{
    ViewBag.Title = "ShowBlogsByCategoryId";
    Layout = "~/Views/Shared/_LayoutHotelSingle.cshtml";
}



<div style="width: 750px;">
    @foreach (var item in Model)
    {
        <div class="col-md-8 ftco-animate">
            <a href="/BlogDetails/ShowBlogDetail/@item.PageID" class="mb-3">@item.Category.Title </a>
            <hr/>
            <a>@item.ShortDescription</a>
            <a href="/BlogDetails/ShowBlogDetail/@item.PageID">
                <img style="max-width: 100%; min-width: 100%; "src="/PageImages/@item.Image" alt="" class="img-fluid">
            </a>

        </div>


    }
</div>

