@using DataLayer
@model IEnumerable<FlightReserve>
@{
    ViewBag.Title = "ShowFlightReserves";
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
}

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            لیست پرواز های رزرو شده
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>مبدا</th>
                            <th>مقصد</th>
                            <th>تاریخ پرواز</th>
                            <th>ساعت پرواز</th>
                            <th>تعداد مسافران</th>
                            <th>نام شرکت</th>
                            <th>قیمت واحد</th>
                            <th>قیمت پرداختی</th>
                            <th>وضعیت پرداخت </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Flight.From</td>
                                <td>@item.Flight.Destination</td>
                                <td>@item.Flight.Departure</td>
                                <td>@item.Flight.DepartureTime</td>
                                <td>@item.Passengers</td>
                                <td>@item.Flight.CompanyName</td>
                                <td>@item.Flight.Price</td>
                                <td>@item.Price</td>
                                @{
                                    if (@item.IsFinally == true)
                                    {
                                        <td>
                                            <span class="glyphicon glyphicon-ok"></span>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <span class="glyphicon glyphicon-remove"></span>
                                        </td>
                                    }
                                }

                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>

</div>
