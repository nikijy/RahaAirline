@model IEnumerable<DataLayer.Reserve>
@{
    ViewBag.Title = "ShowHotelReserves";
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
}

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            لیست اقامتگاه های رزرو شده
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>مکان</th>
                        <th>تعداد مسافران</th>
                        <th>تعداد اتاق </th>
                        <th>تاریخ ورود</th>
                        <th>تاریخ خروج</th>
                        <th>قیمت واحد</th>
                        <th>قیمت پرداختی</th>
                        <th>وضعیت پرداخت</th>

                    </tr>
                    </thead>

                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Residence.Location</td>
                            <td>@item.Passengers</td>
                            <td>@item.RoomNumber</td>
                            <td>@item.CheckIn</td>
                            <td>@item.CheckOut</td>
                            <td>@item.Residence.Price</td>
                            <td>@item.Price</td>
                            @{
                                if (@item.IsFinally == true)
                                {
                                    <td>
                                        <span class="glyphicon glyphicon-ok"></span>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </td>
                                }
                            }
                           
                            <td></td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>

