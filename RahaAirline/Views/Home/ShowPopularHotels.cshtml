@using RahaAirline
@model IEnumerable<DataLayer.Residence>

<section class="ftco-section">
    <div class="container-fluid">
        <div class="row mb-5 pb-5 no-gutters">

            <div class="col-lg-12 p-2 pl-md-5 heading-section">
                <div class="row justify-content-center mb-5 pb-5">
                    <div class="col-md-7 text-center heading-section ftco-animate">
                        <h2>اقامتگاه های پیشنهادی</h2>
                    </div>
                </div>
                <h6 style="direction: ltr;"><a href="/Hotels/Index">نمایش همه</a></h6>
                <div class="row no-gutters d-flex">
       
                    @foreach (var item in Model)
                    {
                        <div class="col-md-3 ftco-animate">
                            <a href="/HotelDetails/ShowResidenceDetail/@item.ResidenceID" class="block-5" 
                               style="background-image: url('/ResidenceImages/@item.Image');">
                              <div class="text">
                                  
                                  <h4 class="heading">@item.Location </h4>
                                  <h3 class="heading">@item.ResidenceType.ResidenceKind</h3>
                                  <span class="price"> @item.Price.ToTooman()</span>
                                
                              </div>
                          </a>
                      </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>